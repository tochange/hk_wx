<form catchreset="formReset" catchsubmit="formSubmit">
    <view class="page">
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">作品名称:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" maxlength="26" name="artName" placeholder="向日葵"></input>
                </view>
            </view>
        </view>
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">艺术类型:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="artType" placeholder="油画"></input>
                </view>
            </view>
        </view>
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">创作年份:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="artYear" placeholder="2018"></input>
                </view>
            </view>
        </view>
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">作者名称:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="artAuthor" placeholder="梵高"></input>
                </view>
            </view>
        </view>
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">作品宽高:</view>
                </view>
                <view class="weui-cell__hd">
                    <view class="weui-label">
                        <input class="weui-input" name="artWidth" placeholder="50"></input>
                    </view>
                </view>
                <view class="weui-cell__hd">
          X
        </view>
                <view class="weui-cell__hd">
                    <view class="weui-label">
                        <input class="weui-input" name="artHeight" placeholder="60"></input>
                    </view>
                </view>
            </view>
        </view>
        <view class="weui-btn-area">
            <button bindtap="showTopTips" class="weui-btn weui-btn_dark" formType="submit">完成</button>
        </view>
        <view class="weui-cells__title set_default">
            <text> 设为默认信息</text>
        </view>
    </view>
</form>
